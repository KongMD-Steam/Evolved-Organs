<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Avali Continued</modName>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName="Make_Humanoid_Protein"]/fixedIngredientFilter/thingDefs</xpath>
				<value>
					<li>Meat_Avali</li>
				</value>
				
				</li>

				<li Class="PatchOperationRemove">
					<!--Tail-->
					<xpath>/Defs/BodyDef[defName="Avali"]/corePart/parts/li[4]</xpath>
				</li>

 				<li Class="PatchOperationReplace">
					<xpath>/Defs/BodyPartDef[defName="TailAvali"]/label</xpath>
					<value><label>avali tail</label></value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Avali"]/alienRace/generalSettings/alienPartGenerator/bodyAddons/li[1]/bodyPart</xpath>
					<value><bodyPart>Tail</bodyPart></value>
				</li>


			<li Class="PatchOperationAdd">
				<xpath>/Defs/BodyDef[defName="Avali"]/corePart/parts</xpath>
				<value>

					<li>
						<def>LowerShoulder</def>
						<customLabel>right lower shoulder</customLabel>
						<coverage>0.00</coverage>
						<groups>
							<li>Torso</li>
						</groups>
					</li>
					<li>
						<def>LowerShoulder</def>
						<customLabel>left lower shoulder</customLabel>
						<coverage>0.00</coverage>
						<groups>
							<li>Torso</li>
						</groups>
					</li>
					<li>	
						<def>RightAbdomenCavity</def>
						<customLabel>Right Abdominal Cavity</customLabel>
						<coverage>0.020</coverage>
						<depth>Inside</depth>
						<groups>
							<li>Torso</li>
						</groups>
					</li>
					<li>
						<def>RightChestCavity</def>
						<customLabel>Right Chest Cavity</customLabel>
						<coverage>0.010</coverage>
						<depth>Inside</depth>
						<groups>
							<li>Torso</li>
						</groups>
					</li>
					<li>
						<def>LeftChestCavity</def>
						<customLabel>Left Chest Cavity</customLabel>
						<coverage>0.010</coverage>
						<depth>Inside</depth>
						<groups>
							<li>Torso</li>
						</groups>
					</li>
					<li>	
						<def>Back</def>
						<coverage>0.020</coverage>
						<depth>Inside</depth>
						<groups>
							<li>Torso</li>
						</groups>
					</li>
					<li>
						<def>Tail</def>
						<customLabel>avali tail</customLabel>
						<coverage>.05</coverage>
						<height>Bottom</height>
						<depth>Outside</depth>
						<groups>
							<li>Waist</li>
							<li>TailAvali</li>
						</groups>
					</li>

				</value>
			</li>
		</operations>
	</Operation>

</Patch>

